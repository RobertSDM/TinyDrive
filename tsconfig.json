{
    "compilerOptions": {
        "target": "es6",
        "useDefineForClassFields": true,
        "lib": ["DOM", "ES2021", "ES6", "DOM.Iterable"],
        "module": "NodeNext",
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"],
            "@auth/*": ["./src/features/authentication/*"],
            "@fileHandling/*": ["./src/features/fileHandling/*"],
            "@notify/*": ["./src/features/notification/*"],
        },
        "declaration": true,
        
        /* Bundler mode */
        "moduleResolution": "node16",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
    },
    "include": ["src", "src/utils/filterFunctions.ts"],
    "references": [{ "path": "./tsconfig.vite.json" }]
}
