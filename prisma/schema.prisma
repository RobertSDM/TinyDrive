generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Folder {
  id        String @id @default(cuid())
  name      String
  files     File[]
  parentId String
  parent    Folder?  @relation(fields: [parentId], references: [id], name: "ParentChild")
  childFolders Folder[] @relation("ParentChild")
  type String @default("FOLDER")
}

enum FileType {
  VIDEO
  TEXT
  PDF
  IMAGE
}

enum DataType {
  TEXT
  BINARY
}

model File {
  id            String   @id @default(cuid())
  type          FileType
  folderId      String
  folder        Folder?  @relation(fields: [folderId], references: [id])
  fileContentId Int
  FileData      FileData @relation(fields: [fileContentId], references: [id])
}

model FileData {
  id        Int      @id @default(autoincrement())
  // if the data is an executable, image, video, etc...
  bytesData Bytes?
  // If the data is a text
  textData  String?
  file      File[]
  dataType  DataType @default(BINARY)
  extension String
}
