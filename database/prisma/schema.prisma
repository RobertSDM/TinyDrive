generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Folder {
  id        String @id @default(cuid())
  name      String
  files     File[]
  parentId String
  parent    Folder?  @relation(fields: [parentId], references: [id], name: "ParentChild")
  childFolders Folder[] @relation("ParentChild")
  type String @default("FOLDER")
}


model File {
  id            String   @id @default(cuid())
  name          String 
  parentId      String?
  parent        Folder?  @relation(fields: [parentId], references: [id])
  fileData      FileData?
}

model FileData {
  id        String     @id @default(cuid())
  byteData String
  // If the data is a text
  fileId    String  @unique
  file      File   @relation(fields: [fileId], references: [id])
  extension String
}
