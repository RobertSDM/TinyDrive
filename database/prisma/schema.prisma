generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Folder {
  id           String   @id @default(cuid())
  name         String   @unique
  files        File[]
  parentId     String?
  parent       Folder?  @relation(fields: [parentId], references: [id], name: "FolderChild")
  childFolders Folder[] @relation("FolderChild")
  type         String   @default("FOLDER")
}

model File {
  id       String    @id @default(cuid())
  name     String    @unique
  parentId String?
  type     String    @default("FILE")
  parent   Folder?   @relation(fields: [parentId], references: [id])
  fileData FileData?
}

model FileData {
  id        String @id @default(cuid())
  byteData  String
  fileId    String @unique
  file      File   @relation(fields: [fileId], references: [id])
  extension String
  byteSize  Int
}
